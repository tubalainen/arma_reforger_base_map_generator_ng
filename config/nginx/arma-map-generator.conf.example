# Arma Reforger Base Map Generator - Nginx Reverse Proxy Configuration
#
# This is an example configuration for running behind nginx + Cloudflare.
# Copy to /etc/nginx/sites-available/ and customize for your setup.
#
# Usage:
#   1. Copy this file to /etc/nginx/sites-available/arma-map-generator.conf
#   2. Update server_name with your domain
#   3. Update SSL certificate paths (or use Cloudflare Origin Certificate)
#   4. Create symlink: ln -s /etc/nginx/sites-available/arma-map-generator.conf /etc/nginx/sites-enabled/
#   5. Test config: nginx -t
#   6. Reload nginx: systemctl reload nginx
#
# IMPORTANT: This configuration explicitly forwards Cookie headers using
# "proxy_set_header Cookie $http_cookie;" which is critical for session
# management to work correctly when behind Cloudflare tunnels or reverse proxies.

# Rate limiting zones
limit_req_zone $binary_remote_addr zone=api_limit:10m rate=10r/s;
limit_req_zone $binary_remote_addr zone=generate_limit:10m rate=1r/m;

# Upstream application
upstream arma_app {
    server 127.0.0.1:8080;
    keepalive 32;
}

# HTTPS server
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name your-domain.com;  # <-- UPDATE THIS

    # SSL Configuration
    # Option 1: Cloudflare Origin Certificate (recommended for Cloudflare users)
    ssl_certificate /etc/ssl/cloudflare/origin.pem;
    ssl_certificate_key /etc/ssl/cloudflare/origin.key;

    # Option 2: Let's Encrypt (for direct access)
    # ssl_certificate /etc/letsencrypt/live/your-domain.com/fullchain.pem;
    # ssl_certificate_key /etc/letsencrypt/live/your-domain.com/privkey.pem;

    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384;
    ssl_prefer_server_ciphers off;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 1d;

    # Cloudflare Real IP restoration
    # Update these ranges periodically from https://www.cloudflare.com/ips/
    set_real_ip_from 103.21.244.0/22;
    set_real_ip_from 103.22.200.0/22;
    set_real_ip_from 103.31.4.0/22;
    set_real_ip_from 104.16.0.0/13;
    set_real_ip_from 104.24.0.0/14;
    set_real_ip_from 108.162.192.0/18;
    set_real_ip_from 131.0.72.0/22;
    set_real_ip_from 141.101.64.0/18;
    set_real_ip_from 162.158.0.0/15;
    set_real_ip_from 172.64.0.0/13;
    set_real_ip_from 173.245.48.0/20;
    set_real_ip_from 188.114.96.0/20;
    set_real_ip_from 190.93.240.0/20;
    set_real_ip_from 197.234.240.0/22;
    set_real_ip_from 198.41.128.0/17;
    # IPv6
    set_real_ip_from 2400:cb00::/32;
    set_real_ip_from 2606:4700::/32;
    set_real_ip_from 2803:f800::/32;
    set_real_ip_from 2405:b500::/32;
    set_real_ip_from 2405:8100::/32;
    set_real_ip_from 2a06:98c0::/29;
    set_real_ip_from 2c0f:f248::/32;
    real_ip_header CF-Connecting-IP;

    # Security headers (supplement application headers)
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;

    # Request size limit
    client_max_body_size 1M;

    # Timeouts
    proxy_connect_timeout 10s;
    proxy_send_timeout 30s;
    proxy_read_timeout 300s;  # 5 min for long-running operations

    # Logging
    access_log /var/log/nginx/arma-map-generator.access.log;
    error_log /var/log/nginx/arma-map-generator.error.log;

    # Static JavaScript and CSS (no cache to prevent stale cached versions)
    location ~ ^/static/.*\.(js|css)$ {
        proxy_pass http://arma_app;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        add_header Cache-Control "no-cache, no-store, must-revalidate";
        add_header Pragma "no-cache";
        add_header Expires "0";
    }

    # Other static files (images, fonts, etc. - cached)
    location /static/ {
        proxy_pass http://arma_app;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        proxy_cache_valid 200 1d;
        add_header Cache-Control "public, max-age=86400";
    }

    # Health check (no rate limit)
    location = /api/health {
        proxy_pass http://arma_app;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Cookie $http_cookie;
        proxy_set_header Connection "";
    }

    # Generation endpoint (strict rate limit: 1 req/min with burst of 2)
    location = /api/generate {
        limit_req zone=generate_limit burst=2 nodelay;
        limit_req_status 429;

        proxy_pass http://arma_app;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Cookie $http_cookie;
        proxy_set_header Connection "";
    }

    # API endpoints (standard rate limit: 10 req/sec with burst of 20)
    location /api/ {
        limit_req zone=api_limit burst=20 nodelay;
        limit_req_status 429;

        proxy_pass http://arma_app;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Cookie $http_cookie;
        proxy_set_header Connection "";
    }

    # Main application
    location / {
        limit_req zone=api_limit burst=20 nodelay;

        proxy_pass http://arma_app;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Cookie $http_cookie;
        proxy_set_header Connection "";
    }
}

# HTTP to HTTPS redirect
server {
    listen 80;
    listen [::]:80;
    server_name your-domain.com;  # <-- UPDATE THIS
    return 301 https://$host$request_uri;
}
